        queue: nQueue {
            parameters:
                @display("p=114,84");
        }
        sr: SendReceive {
            parameters:
                txRate = txRate;
                pkLenBits = pkLenBits;
                @display("p=198,134");
                errorRate = errorRate;
        }
        control: DelayControl {
            parameters:
                @display("p=198,34");
        }


        
